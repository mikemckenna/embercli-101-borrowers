<table class="mt3 fit">
  <thead class="p1 h2">
    <tr class="white bg-blue">
      <th {{action "setSortBy" "firstName"}}>Name</th>
      <th {{action "setSortBy" "totalLoans"}}>Total Loans</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody class="p1 h3">
    {{#each model as |friend|}}
      <tr>
        <td class="border-bottom">{{link-to friend.fullName "loans" friend}}</td>
        <td class="border-bottom">{{friend.totalLoans}}</td>
        <td class="border-bottom"><a href="#" {{action "delete" friend}}>Delete</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
